%h1 Listing images

%table
  %thead
    %tr
      %th Preview
      %th Filename
      %th Hash val
      %th Content Type

  %tbody
    - @images.each do |image|
      %tr
        %td
          = image_tag "/#{image.filename}", alt: image.filename, height: '80px', width: '120px'
        %td= image.filename
        %td= image.hash_val
        %td= image.content_type

%br

= link_to 'New Image', new_image_path
