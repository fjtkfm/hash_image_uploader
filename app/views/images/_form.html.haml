= form_for @image do |f|
  - if @image.errors.any?
    #error_explanation
      %h2= "#{pluralize(@image.errors.count, "error")} prohibited this image from being saved:"
      %ul
        - @image.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :filename
    = f.text_field :filename
  .field
    = f.label :path
    = f.text_field :path
  .field
    = f.label :hash_val
    = f.text_field :hash_val
  .actions
    = f.submit 'Save'
